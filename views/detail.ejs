<h2>Detail Contact</h2>
<hr />
<% if (!contact) { %>
<h3>Data Not Found</h3>
<% }else{ %>
<div class="col-md-4">
  <div class="row">
    <ul class="list-group list-group-flush">
      <li class="list-group-item"><strong>Nama :</strong> <%= contact.name %></li>
      <li class="list-group-item"><strong>Email :</strong> <%= contact.email %></li>
      <li class="list-group-item"><strong>Telephone :</strong> <%= contact.mobile %></li>
    </ul>
  </div>
  <a href="/contact" class="btn btn-sm btn-primary">Back</a>
</div>
<% } %>
