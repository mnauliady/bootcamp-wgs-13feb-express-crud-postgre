<h2>Contact page</h2>
<hr />
<a href="/contact/create" class="btn btn-primary btn-sm">Create New</a>
<table class="table">
  <tr>
    <th>#</th>
    <th>Nama</th>
    <th>Mobile</th>
    <th>Action</th>
  </tr>

  <!-- mengecek apakah data kosong -->
  <% if (contact.length === 0) { %>
  <td>Data Kosong</td>

  <!-- jika data tidak kosong  -->
  <% } %> <% contact.forEach((data, i) => { %>
  <tr>
    <td><%= ++i %></td>
    <td><%= data.name %></td>
    <td><%= data.mobile %></td>
    <td>
      <a href="/contact/<%= data.name %>" class="btn btn-primary btn-sm">Detail</a>
      <a href="/contact/edit/<%= data.name %>" class="btn btn-warning btn-sm">Edit</a>
      <form action="/contact/delete/<%= data.name %>" method="post" class="d-inline">
        <button class="btn btn-danger btn-sm" onclick="return confirm('Hapus Data <%= data.name %> ?')">Delete</button>
      </form>
    </td>
  </tr>
  <% }) %>
</table>
